@model User
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>


<form class="mt-3" asp-controller="home" asp-action="Login" method="post">
<div class="form-group row">
    <label class="col-sm-2 col-form-label" asp-for="Email"></label>
    <div class="col-sm-10">
        <input class="form-control" asp-for="Email" placeholder="Email"/>
    </div>
</div>
<div  class="form-group row">
    <label class="col-sm-2 col-form-label" asp-for="Password"></label>
    <div class="col-sm-10">
        <input class="form-control" asp-for="Password" placeholder="Password"  type="password"/>
    </div>
    
</div>
<div  class="form-group row">
    <div class="col-sm-10">
        <button class="btn btn-primary" type="submit">Login</button>
    </div>
</div>
</form>

<div class=" alert-info">
    <a href="/Home/New/">Edit</a>
</div>
